<section class="dashboard">
  <div class="title-container">
    <h2>Dashboard</h2>
    <a href="/toughts/add" class="btn">Criar Pensamentos</a>
  </div>
  <h3>Seus Pensamentos</h3>
<ul>
    {{#each toughts}}
    <li>
      <span>{{this.title}}</span>
      <span>
        <a href="/toughts/edit/{{this.id}}">Editar</a>
        <form action="/toughts/delete" method="post">
        <input type="hidden" name="id" value="{{this.id}}">
        <input type="submit" value="Excluir">
        </form>
      </span>
    </li>
    {{/each}}
  </ul>

  {{#if emptyTought}}
  <p>Ainda n√£o existe pensamentos, comece a criar <a href="/toughts/add">Por aqui</a></p>
  {{/if}}

</section>