<section class="home-header">
  <h1>Todos os pensamentos</h1>
  <form action="/" method="get">
  <input type="text" name="search" placeholder="EstÃ¡ buscando algo?">
  <input type="text" class="bnt" value="Buscar">
  </form>
  <div class="order-container">
    <span>Ordenar por: </span>
    <form action="/" method="get">
    <input type="hidden" name="search" value="{{this.search}}">
    <input type="hidden" name="order" value="new">
    <button type="submit">
    <i class="bi bi-arrow-up"></i>
    Mais novos
    </button>
    </form>

    <form action="/" method="get">
    <input type="hidden" name="search" value="{{this.search}}">
    <input type="hidden" name="order" value="old">
    <button type="submit">
    <i class="bi bi-arrow-down"></i>
    Mais antigos
    </button>
    </form>
  </div>
</section>
<section class="toughts-container">
  {{#each toughts}}
  <figure>
    <blockquote>"{{this.title}}"</blockquote>
    <figcaption>
      Por <span>{{this.User.name}}</span>
    </figcaption>
  </figure>
  {{/each}}
</section>